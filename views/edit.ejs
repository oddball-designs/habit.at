<!DOCTYPE html>
<html>
<head>
  <title>Habit.at</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/cosmo/bootstrap.min.css" rel="stylesheet" integrity="sha384-OiWEn8WwtH+084y4yW2YhhH6z/qTSecHZuk/eiWtnvLtU+Z8lpDsmhOKkex6YARr" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Tangerine:400,700" rel="stylesheet" type="text/css">
  <link href="/../../../style.css" rel="stylesheet">
</head>
<body>

<% include partials/header %>

  <div class="container">
    <div class="row" id="make_task">
      <div class="col-md-6">
        <h3>Add a task</h3>
        <form method="POST" action="/households/<%= session.household_id %>/users/<%= users[0].id %>/tasks/<%= task.id %>?_method=PUT">

          <div class="form-group">
            <div class="tasks">
              <label for="title">Task name:</label>
              <input type="text" value="<%= task.title %>" class="form-control" name="title">
            </div>
            <div class="tasks">
              <label for="description">Task description</label>
              <textarea type="text" rows="5" class="form-control" name="description"><%= task.description %></textarea>
            </div>
            <div class="tasks">
              <label for="user">Assigned to:</label>
              <select name="user" class="tasks" id="select_person">
                <% users.forEach(function(user) { %>
                  <% if (task.user_id === user.id) { %>
                  <option selected><%=user.first_name%></option>
                  <% } else { %>
                  <option><%=user.first_name%></option>
                  <% } %>
                <% }); %>
              </select>

            </div>
            <div class="tasks">
              <label>Weekly task?
                <input type="checkbox" <% if(task.is_weekly === true){ %>
                                        checked="checked"
                                        <% } %>
                                        name="is_weekly">
              </label>
            </div>
            <div class="tasks">
              <label for="date">Date Due:</label>
              <input type="date" value="<%= task.due_date %>" class="form-control" name="date_due">
            </div>
            <div class="tasks">
              <label for="time_due">Time Due:</label>
              <input type="time" value="<%= task.time_due %>"class="form-control" name="time_due">
            </div>

          </div>
          <div class="form-group" style="padding:5% 0">
            <button class="btn btn-info" type="submit">Submit</button>
          </div>

        </form>

      </div>

    </div>

  </div>


<% include partials/footer %>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

</body>
</html>
